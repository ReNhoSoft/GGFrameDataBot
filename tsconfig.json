{
    "compilerOptions": {
      "module": "Node16",
      "moduleResolution": "Node16",
      "target": "ES2020",
      // TODO: Revert to true to validate all declarations
      "noImplicitAny": false,
      "removeComments": true,
      "preserveConstEnums": true,
      "sourceMap": true,
      "experimentalDecorators": true,
      "outDir": "bin",
      "allowSyntheticDefaultImports": true,
    }
}